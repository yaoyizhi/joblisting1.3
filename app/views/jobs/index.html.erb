<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-10 col-lg-9">
            <div class="panel  panel-success">
                <div class="panel-heading">
                    <% if current_user %>
                        <% if !current_user.validate? %>
                            <%= link_to("发信息前需提交认证",edit_user_path(current_user.id), class: "btn btn-success pull-right")%>
                        <% else %>
                            <%= link_to("发布信息",new_job_path, class: "btn btn-success pull-right")%>
                        <% end %>
                    <% end %>
                </div>
                <div class="panel-body">
                    <table class="table table-boldered">
                        <tbody>
                            <thead>
                                <tr>
                                    <td>发布的信息 </td>
                                    <td>回复数量</td>
                                    <td>更新时间</td>
                                </tr>
                            </thead>
                            <% @jobs.each do |job| %>
                                <tr>
                                    <td><%=link_to(job.title, job_path(job))%></td>
                                    <td><%= job.resumes.count %></td>
                                    <td><%= job.created_at %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
