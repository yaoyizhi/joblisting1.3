<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-8 col-md-9">
            <div class="panel panel-primary">
                <div class="panel-body">
                    <table class="table table-boldered">
                        <thead>
                            <tr>
                                <th>用户姓名</th>
                                <th>管理项目</th>
                                <th>更新时间</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                    <td>
                                        <%= render_user_status(user) %>
                                        <%=link_to(user.name,admin_user_path(user))%></td>
                                    <td>
                                        <%= link_to("修改", edit_admin_user_path(user))%>
                                        <%=link_to("删除", admin_user_path(user), method: :delete, :data => {:confirm => "Are you sure?"})%>
                                    </td>
                                    <td><%= user.created_at %></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
