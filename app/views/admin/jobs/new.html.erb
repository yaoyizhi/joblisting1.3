<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-9 col-lg-8">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">发布信息</h3>
                </div>
                <div class="panel-body">
                    <%= simple_form_for [:admin,@job] do |f|%>
                        <%= f.input :title %>
                        <%= f.input :description %>
                        <%= f.input :attachment %>
                        <%= f.input :is_hidden, :label => "隐藏" %>
                        <%= f.submit '提交'%>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
